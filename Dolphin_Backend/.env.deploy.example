# Dolphin Backend - Deployment .env template
# Copy this to .env when deploying locally only OR use it as a reference for Render variables.
# DO NOT commit real secrets to the repository. Set sensitive values in Render Dashboard.

APP_NAME=Dolphin
APP_ENV=production
APP_KEY=   # <-- Set in Render (e.g. base64:...)
APP_DEBUG=false
APP_URL=https://<your-backend>.onrender.com

# Frontend URL for CORS and links (update after Netlify deploy)
FRONTEND_URL=https://<your-frontend>.netlify.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_LEVEL=error

# Database - Render manages DB credentials automatically when using Blueprint
DB_CONNECTION=pgsql
DB_HOST=<from-render>
DB_PORT=<from-render>
DB_DATABASE=<from-render>
DB_USERNAME=<from-render>
DB_PASSWORD=<from-render>

SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database
QUEUE_CONNECTION=database
FILESYSTEM_DISK=local

# Redis (optional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail - set real SMTP credentials in Render
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@yourdomain.com
MAIL_FROM_NAME=Dolphin

# Stripe (only if using payments) - set in Render
STRIPE_KEY=pk_test_xxx
STRIPE_SECRET=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Other third-party keys
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GEMINI_MODEL=gemini-pro
GEMINI_PLAN=student

# Optional: logging, caching
LOG_STACK=single

# NOTE:
# - Do NOT store secrets in the repository. Use Render's environment variables UI.
# - This file is only a template to help you see what keys Render needs.
